{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails d'utilisateur <i>{{ utilisateur.prenom }}{{ utilisateur.nom }}</i> :</h1>
    <div class="media" style="margin-top: 60px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>{{ utilisateur.prenom }}</strong> <i>({{ utilisateur.nom }})</i></h3>
                </div>

            </div>

            <p>
                <strong>Email de contact :</strong> {{ utilisateur.email }}
            </p>
            <p>
                <strong>telephone :</strong> {{ utilisateur.telephone }}
            </p>
            <p>
                <strong>Les avis sur l'utilisateur : </strong>
                {% for tuteur in utilisateur.tuteurs %}
                    <p>étoiles: {{ utilisateur.nbEtoile }} *</p>
                    <p>avis: {{ utilisateur.nbEtoile }}</p>
                    <br><br>
                {% endfor %}
            </p>
        </div>
    </div>
{% endblock %}