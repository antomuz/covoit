{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            {{'convoit.you_are_logged_in_as'|trans}} {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{{'convoit.please_sign_in'|trans}}</h1>
    <table>
        <tr>
            <th><label for="inputId">Id</label></th>
            <th><input type="text" value="{{ last_username }}" name="id" id="inputId" class="form-control" autocomplete="username" required autofocus></th>
        </tr>
        <tr>
            <th><label for="inputPassword">{{'convoit.password'|trans}}</label></th>
            <th><input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required></th>
        </tr>
    </table>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


        {#  Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html#}

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> {{'convoit.remember_me'|trans}}
            </label>
        </div>


    <button class="btn btn-lg btn-primary" type="submit">
        {{'convoit.sign_in'|trans}}
    </button>
</form>
{% endblock %}
