{% extends 'base.html.twig' %}

{% block title %}Edit Commentaire{% endblock %}

{% block body %}
    <h1>{{'convoit.editer_commentaire'|trans}}</h1>

    {{ include('commentaire/_form_edit.html.twig', {'button_label': 'Update'}) }}
    {{ include('commentaire/_delete_form.html.twig') }}

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_commentaire_index') }}">{{'convoit.retour_liste'|trans}}</a>
    {% elseif is_granted('ROLE_USER') %}
        <a href="{{ path('app_commentaire_user') }}">{{'convoit.retour_liste'|trans}}</a>
    {% endif %}

{% endblock %}
