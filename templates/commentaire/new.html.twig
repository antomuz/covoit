{% extends 'base.html.twig' %}

{% block title %}New Commentaire{% endblock %}

{% block body %}
    <h1>{{'convoit.creer_nouveau_commentaire'|trans}}</h1>

    {{ include('commentaire/_form.html.twig') }}

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_commentaire_index') }}">{{'convoit.retour_liste'|trans}}</a>
    {% elseif is_granted('ROLE_USER') %}
        <a href="{{ path('app_commentaire_user') }}">{{'convoit.retour_liste'|trans}}</a>
    {% endif %}
{% endblock %}
