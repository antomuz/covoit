{% extends 'base.html.twig' %}

{% block title %}Trajet index{% endblock %}

{% block body %}
    <h1>Liste des Trajets</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>VilleDepart</th>
                <th>VilleArrivee</th>
                <th>DateHeure</th>
                <th>Voiture</th>
                <th>NbPlace</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trajet in trajets %}
            <tr>
                <td>{{ trajet.id }}</td>
                <td>{{ trajet.villeDepart }}</td>
                <td>{{ trajet.villeArrivee }}</td>
                <td>{{ trajet.dateHeure ? trajet.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ trajet.voiture }}</td>
                <td>{{ trajet.nbPlace }}</td>
                <td>{{ trajet.prix }}</td>
                <td>
                    <a href="{{ path('app_trajet_show', {'id': trajet.id}) }}">show</a>


                    {% if (app.user and app.user.id == trajet.auteur) or is_granted('ROLE_ADMIN')  %}

                        <a href="{{ path('app_trajet_edit', {'id': trajet.id}) }}">edit</a>

                    {% endif %}


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if app.user %}
        <a href="{{ path('app_trajet_new') }}">Create new</a>
    {% endif %}
{% endblock %}
